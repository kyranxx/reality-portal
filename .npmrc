# Disable deprecated warning for inflight package
# This fixes the warning mentioned in Vercel logs
public-hoist-pattern[]=*inflight*

# Ensure consistent package resolutions
legacy-peer-deps=true

# Use more reliable registry
registry=https://registry.npmjs.org/

# Improve installation performance
fund=false
audit=false

# Skip post-install scripts for faster installs
ignore-scripts=false
